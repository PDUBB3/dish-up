{{>private-navbar}}


  <div class="container-fluid bg-light mt-5">
      <div class="p-4">
        <h1 id="search-title" data-meal="{{meal}}" data-day="{{day}}" data-id="{{id}}" class="text-center search-title">{{day}} - {{meal}}</h1>
        <form id="meal-search"class="d-flex flex-wrap flex-column">
          <input
            class="form-control form-control-lg mb-3"
            type="text"
            placeholder="Search for tomatoes.."
            aria-label=".form-control-lg example"
            id="search-input"
          />

          <div class="text-center">Select dietary requirements</div>
          <div
            class="btn-group mb-3 flex-wrap"
            id="diet-input"
            role="group"
            aria-label="Basic checkbox toggle button group"
          >
            <input
              type="checkbox"
              class="btn-check"
              id="glutenFree"
              autocomplete="off"
            />
            <label class="btn btn-outline-success checkbox" for="glutenFree"
              >Gluten Free</label
            >
            <input
              type="checkbox"
              class="btn-check"
              id="ketogenic"
              autocomplete="off"
            />
            <label class="btn btn-outline-success checkbox" for="ketogenic"
              >Ketogenic</label
            >
            <input
              type="checkbox"
              class="btn-check"
              id="vegetarian"
              autocomplete="off"
            />
            <label class="btn btn-outline-success checkbox" for="vegetarian"
              >Vegetarian</label
            >
            <input
              type="checkbox"
              class="btn-check"
              id="lacto-vegetarian"
              autocomplete="off"
            />
            <label class="btn btn-outline-success checkbox" for="lacto-vegetarian"
              >Lacto-Vegetarian</label
            >
            <input
              type="checkbox"
              class="btn-check"
              id="ovo-vegetarian"
              autocomplete="off"
            />
            <label class="btn btn-outline-success checkbox" for="ovo-vegetarian"
              >Ovo-Vegetarian</label
            >
            <input
              type="checkbox"
              class="btn-check"
              id="vegan"
              autocomplete="off"
            />
            <label class="btn btn-outline-success checkbox" for="vegan"
              >Vegan</label
            >
            <input
              type="checkbox"
              class="btn-check"
              id="pescetarian"
              autocomplete="off"
            />
            <label class="btn btn-outline-success checkbox" for="pescetarian"
              >Pescetarian</label
            >
            <input
              type="checkbox"
              class="btn-check"
              id="paleo"
              autocomplete="off"
            />
            <label class="btn btn-outline-success checkbox" for="paleo"
              >Paleo</label
            >
            <input
              type="checkbox"
              class="btn-check"
              id="primal"
              autocomplete="off"
            />
            <label class="btn btn-outline-success checkbox" for="primal"
              >Primal</label
            >
            <input
              type="checkbox"
              class="btn-check"
              id="whole30"
              autocomplete="off"
            />
            <label class="btn btn-outline-success checkbox" for="whole30"
              >Whole30</label
            >
          </div>

          <div class="text-center">Any intolerances?</div>
          <div
            class="btn-group mb-3 flex-wrap"
            role="group"
            aria-label="Basic checkbox toggle button group"
          >
            <input
              type="checkbox"
              class="btn-check"
              id="1"
              autocomplete="off"
            />
            <label class="btn btn-outline-danger" for="1">Dairy</label>
            <input
              type="checkbox"
              class="btn-check"
              id="2"
              autocomplete="off"
            />
