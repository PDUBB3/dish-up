{{> private-navbar}}

    <div class="container mt-3 text-center">
      <img
        src="{{recipe.image}}"
        height="300"
        width="500"
      />
      <h1 class="recipe-title">{{recipe.title}}</h1>
      <div>
        <ul class="list-inline">
          <li class="list-inline-item">
            <span class="fw-bold recipe-text">Servings: </span> {{recipe.servings}} ||
          </li>
          <li class="list-inline-item">
            <span class="fw-bold recipe-text">Ready in:</span> {{recipe.readyInMinutes}} minutes ||
          </li>
          <li class="list-inline-item">
            <span class="fw-bold recipe-text">Calories:</span> {{recipe.calories}}
          </li>
        </ul>
      </div>
      <div class="mb-5">
        {{{recipe.summary}}}
      </div>
      <div class="d-flex
          flex-lg-nowrap flex-wrap
          justify-content-center row">
        <div class="mx-2 mb-5 p-3 col-4 ingredients-container">
          <h4 class="subtitle pb-2">Ingredients</h4>
          <ul class="text-start text-light">
            {{#each recipe.ingredients}}
            <li>{{this}}</li>
            {{/each}}
          </ul>
        </div>
        <div class="mx-2 mb-5 col-6">
          <h4 class="subtitle">Instructions</h4>
          <ol class="text-start">
            {{#each recipe.steps}}
            <li>{{this}}</li>
            {{/each}}
          </ol>
        </div>
      </div>
    </div>