{{#if isLoggedIn}}
{{>private-navbar}}
{{else}}
{{>public-navbar}}
{{/if}}

<main >
  <div class="container rounded px-0 ">
  <div class="text-center mt-3 px-3 pt-2 pb-1 mealplan-info">
  <h2>Did you know....?</h2>
  <p>{{data.text}}</p> 
</div>
</div>
  <div class="container bg-light mt-3 shadow p-3 mb-5 bg-body rounded">

      <div class="p-4">
        <form id="meal-search"class="d-flex flex-wrap flex-column">
          <input
            class="form-control form-control-lg mb-3"
            type="text"
            placeholder="Search for your favourite ingredients..."
            aria-label=".form-control-lg example"
            id="search-input"
          />

          <div class="text-center">Select dietary requirements</div>
          <div
            class="btn-group mb-3 flex-wrap"
            id="diet-input"
            role="group"
            aria-label="Basic checkbox toggle button group"
          >
            <input
              type="checkbox"
              class="btn-check"
              id="glutenFree"
              autocomplete="off"
            />
            <label class="btn btn-outline-success checkbox" for="glutenFree"
              >Gluten Free</label
            >
            <input
              type="checkbox"
              class="btn-check"
              id="ketogenic"
              autocomplete="off"
            />
            <label class="btn btn-outline-success checkbox" for="ketogenic"
              >Ketogenic</label
            >
            <input
              type="checkbox"
              class="btn-check"
              id="vegetarian"
              autocomplete="off"
            />
            <label class="btn btn-outline-success checkbox" for="vegetarian"
              >Vegetarian</label
            >
            <input
              type="checkbox"
              class="btn-check"
              id="lacto-vegetarian"
              autocomplete="off"
            />
            <label class="btn btn-outline-success checkbox" for="lacto-vegetarian"
              >Lacto-Vegetarian</label
            >
            <input
              type="checkbox"
              class="btn-check"
              id="ovo-vegetarian"
              autocomplete="off"
            />
            <label class="btn btn-outline-success checkbox" for="ovo-vegetarian"
              >Ovo-Vegetarian</label
            >
            <input
              type="checkbox"
              class="btn-check"
              id="vegan"
              autocomplete="off"
            />
            <label class="btn btn-outline-success checkbox" for="vegan"
              >Vegan</label
            >
            <input
              type="checkbox"
              class="btn-check"
              id="pescetarian"
              autocomplete="off"
            />
            <label class="btn btn-outline-success checkbox" for="pescetarian"
              >Pescetarian</label
            >
            <input
              type="checkbox"
              class="btn-check"
              id="paleo"
              autocomplete="off"
            />
            <label class="btn btn-outline-success checkbox" for="paleo"
              >Paleo</label
            >
            <input
              type="checkbox"
              class="btn-check"
              id="primal"
              autocomplete="off"
            />
            <label class="btn btn-outline-success checkbox" for="primal"
              >Primal</label
            >
            <input
              type="checkbox"
              class="btn-check"
              id="whole30"
              autocomplete="off"
            />
            <label class="btn btn-outline-success checkbox" for="whole30"
              >Whole30</label
            >
          </div>

          <div class="text-center">Any intolerances?</div>
          <div
            id="intolerance-input"
            class="btn-group mb-3 flex-wrap"
            role="group"
            aria-label="Basic checkbox toggle button group"
          >
            <input
              type="checkbox"
              class="btn-check"
              id="Dairy"
              autocomplete="off"
            />
            <label class="btn btn-outline-danger" for="Dairy">Dairy</label>
            <input
              type="checkbox"
              class="btn-check"
              id="Egg"
              autocomplete="off"
            />
            <label class="btn btn-outline-danger" for="Egg">Egg</label>
            <input
              type="checkbox"
              class="btn-check"
              id="Gluten"
              autocomplete="off"
            />
            <label class="btn btn-outline-danger" for="Gluten">Gluten</label>
            <input
              type="checkbox"
              class="btn-check"
              id="Grain"
              autocomplete="off"
            />
            <label class="btn btn-outline-danger" for="Grain">Grain</label>
            <input
              type="checkbox"
              class="btn-check"
              id="Peanut"
              autocomplete="off"
            />
            <label class="btn btn-outline-danger" for="Peanut">Peanut</label>
            <input
              type="checkbox"
              class="btn-check"
              id="Seafood"
              autocomplete="off"
            />
            <label class="btn btn-outline-danger" for="Seafood">Seafood</label>
            <input
              type="checkbox"
              class="btn-check"
              id="Sesame"
              autocomplete="off"
            />
            <label class="btn btn-outline-danger" for="Sesame">Sesame</label>
            <input
              type="checkbox"
              class="btn-check"
              id="Shellfish"
              autocomplete="off"
            />
            <label class="btn btn-outline-danger" for="Shellfish">Shellfish</label>
            <input
              type="checkbox"
              class="btn-check"
              id="Soy"
              autocomplete="off"
            />
            <label class="btn btn-outline-danger" for="Soy">Soy</label>
            <input
              type="checkbox"
              class="btn-check"
              id="Sulfite"
              autocomplete="off"
            />
            <label class="btn btn-outline-danger" for="Sulfite">Sulfite</label>
            <input
              type="checkbox"
              class="btn-check"
              id="TreeNut"
              autocomplete="off"
            />
            <label class="btn btn-outline-danger" for="TreeNut">Tree Nut</label>
            <input
              type="checkbox"
              class="btn-check"
              id="Wheat"
              autocomplete="off"
            />
            <label class="btn btn-outline-danger" for="Wheat">Wheat</label>
          </div>
          <button type="submit" class=" btn-lg search-btn">
            <div class="spinner spinner-border mx-auto" id="spinner" role="status" aria-hidden="true">
            </div>
            <span  id="search-text">Search</span>
          </button>
        </form>
        {{#if noSearchResults}}
          {{> no-results}}
          {{else}}
            {{#if searchMeals}}
          <h2 class="my-5 text-center home-title">Results</h2>
          <div class="d-flex flex-wrap justify-content-center">
          {{#each searchMeals}}
            {{> meal-card}}
          {{/each}}
          </div>
          {{/if}}
        {{/if}}

        <div class="row justify-content-center mt-4">
        <h2 class="home-title text-center mb-4">Recently Added</h2>
        </div>
          <div class="swiper-container">
        <div class="swiper-wrapper">
          {{#each mealsArray}}
          <div class="swiper-slide">
          <div class="card carousel-card">
            
            <img src="{{image}}" class="carousel-image" id="{{spoonacular_id}}"/>
            <div class="card-body p-0 text-center">
              <p class="fs-5">{{title}}</p> 
            </div>
          </div>
          </div>
          {{/each}}
        </div>
        <div class="swiper-pagination"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
        </div>
      </div>
  </div>

</main>
  {{>footer}}

