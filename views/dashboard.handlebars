      ><i class="fab fa-twitter"></i></a>

      <!-- Instagram -->
      <a
        class="insta btn btn-link btn-floating btn-lg text-light m-1"
        href="#!"
        role="button"
        data-mdb-ripple-color="dark"
      ><i class="fab fa-instagram"></i></a>

      <!-- Github -->
